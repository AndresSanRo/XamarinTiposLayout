<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TiposLayout"
             x:Class="TiposLayout.MainPage">
    <ContentPage.Content>
        <StackLayout Margin="0, 40, 0, 0">
            <Button Text="StackLayout" x:Name="btnStack"/>
            <Button Text="Frame" x:Name="btnFrame"/>
            <Button Text="FlexLayout" x:Name="btnFlex"/>
            <Button Text="AbsoluteLayout" x:Name="btnAbsolute"/>
            <Button Text="ScrollView" x:Name="btnScroll"/>
            <Button Text="Collatz" x:Name="btnCollatz"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
