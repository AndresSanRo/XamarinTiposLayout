<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiposLayout.XamlViews.Collatz">
    <ContentPage.Content>
        <StackLayout Margin="0, 40, 0, 0">
            <Label Text="Collatz"
                FontSize="40"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="entryCollatz" BackgroundColor="Bisque" HorizontalOptions="CenterAndExpand" VerticalOptions="Start" />
            <Button x:Name="btnCollatz" BackgroundColor="OrangeRed" TextColor="Black" Text="Calcular" />
            <ScrollView x:Name="scrollCollatz" VerticalOptions="FillAndExpand" BackgroundColor="Bisque">
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>